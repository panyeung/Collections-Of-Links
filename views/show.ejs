<%- include("partials/header") %>

<section id="show">
    <div class="container">
        <div class="header clearfix">
            <h3 class="text-muted"><%=link.name%></h3>
        </div>

        <div class="jumbotron">
            <h1 class="display-3">
                <%=link.name%></h1>
            <p class="lead"><%= link.description %> </p>
            <p><em>Submitted By </em><%=link.author.username%></p>
            <!-- currentUser is define in app.js -->
            <!-- hide the delete and edit when user is not login or not his -->
            <% if(currentUser && link.author.id.equals(currentUser._id)){ %>
            <form class="edit-button" action="/links/<%=link._id%>?_method=DELETE" method="POST">
                <a class="btn btn-warning" href="/links/<%=link._id%>/edit">Edit!</a>
                <button class="btn btn-danger">Delete!</button>
            </form>
            <%}%> 
        </div>
    </div>

</section>
<%- include("partials/footer") %>