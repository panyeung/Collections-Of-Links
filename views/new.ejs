<%- include("partials/header") %>

<!-- Section adding new link -->
<section id="addNewLink">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="newLinkTitle">Created a new Link</h1>
            </div>
            <div class="col-md-4 text-center newLinkForm">
                <form action="/links" method="POST">
                    <div class='form-group'>
                        <input class='form-control' type='text' name='url_link' placeholder='url_link'>
                    </div>
                    <div class='form-group'>
                        <textarea class='form-control' rows="15" type='text' name='description'
                            placeholder='description'></textarea>
                    </div>
                    <div class='form-group'>
                        <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
                        <a class="btn btn-lg btn-primary btn-block" href="/links">Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include("partials/footer") %>